<div class='mt-4'>
    <h3>Khóa học của tôi</h3>
    <table class='table mt-4'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>Tên Khóa Học</th>
                <th scope='col'>Trình độ</th>
                <th scope='col' colspan='4'>Thời gian tạo</th>
                {{! <th scope='col'></th>
                <th scope='col'></th> }}
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th scope='row'>{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>{{this.updatedAt}}</td>
                    <td><a href='/courses/{{this._id}}/edit' class='btn btn-link'>Sửa</a></td>
                    <td><a
                            href=''
                            class='btn btn-link'
                            data-bs-toggle='modal'
                            data-bs-target='#exampleModal'
                            data-bs-id="{{this._id}}"
                        >Xóa</a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div
    class='modal fade'
    id='exampleModal'
    tabindex='-1'
    aria-labelledby='exampleModalLabel'
    aria-hidden='true'
>
    <div class='modal-dialog'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title' id='exampleModalLabel'>Xóa Khóa Học</h5>
                <button
                    type='button'
                    class='btn-close'
                    data-bs-dismiss='modal'
                    aria-label='Close'
                ></button>
            </div>
            <div class='modal-body'>
                Bạn chắc chắn muốn xóa khóa học này?
            </div>
            <div class='modal-footer'>
                <button
                    type='button'
                    class='btn btn-secondary'
                    data-bs-dismiss='modal'
                >Không</button>
                <button id="btn-delete-course" type='button' class='btn btn-danger'>Có</button>
            </div>
        </div>
    </div>
</div>
<form method='POST'  id="formDelete"></form>
<script>
        const exampleModal = document.getElementById('exampleModal')
        let courseId;
         const formDelete = document.getElementById('formDelete')

        exampleModal.addEventListener('show.bs.modal', function (event) { 
            const button = event.relatedTarget 
            courseId = button.getAttribute('data-bs-id')
           
         })
         const btnDeleteCourse = document.getElementById('btn-delete-course')
            btnDeleteCourse.onclick = function(){
                formDelete.action = '/courses/'+ courseId +'?_method=DELETE' // khong  viết ở thằng trên cái form delete vì nó đâu có trong vòng for để lấy course.id đâu
                    formDelete.submit()
                 
            }
</script>