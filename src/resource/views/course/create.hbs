<div class='mt-4'>
    <h3>Đăng Khóa Học</h3>
    <form method='POST' action='/cuaHang'>
        {{! action để dẫn đến store bên courseController  }}
        <div class='form-group mt-2'>
            <label for='name'>Tên Khóa Học</label>
            <input type='text' class='form-control' id='name' name='name' />
        </div>
        <div class='form-group mt-2'>
            <label for='desciption'>Mô tả</label>
            <input
                type='text'
                class='form-control'
                id='desciption'
                name='desciption'
            />
        </div>
        <div class='form-group mt-2'>
            <label for='videoId'>Video ID</label>
            <input
                type='text'
                class='form-control'
                id='videoId'
                name='videoId'
            />
        </div>
        <div class='form-group mt-2'>
            <label for='level'>Trình độ khóa học</label>
            <input type='text' class='form-control' id='level' name='level' />
        </div>

        <button type='submit' class='btn btn-primary mt-4'>Thêm khóa học</button>
    </form>
</div>