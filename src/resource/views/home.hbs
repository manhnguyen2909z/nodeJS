<div class='my-4'>
    <div class='row'>
        {{#each courses}}
            <div class='col-sm-6 col-lg-4'>
                <div class='card mt-4'>
                    <a href='/courses/{{this.slug}}'>
                        <img
                            class='card-img-top'
                            src='{{this.img}}'
                            alt='Card image cap'
                        />
                    </a>
                    <div class='card-body'>
                        <a href='/courses/{{this.slug}}'>
                            <h5 class='card-title'>{{this.name}}</h5>
                        </a>
                        <p class='card-text'>{{this.desciption}}</p>
                        <a href='#' class='btn btn-primary'>Mua khóa học</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>